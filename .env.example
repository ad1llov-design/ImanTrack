# =============================================================================
# ImanTrack — Environment Variables
# Скопируйте этот файл в .env.local и заполните значения
# =============================================================================

# ── App ───────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ImanTrack
NEXT_PUBLIC_APP_DESCRIPTION="Трекер духовного роста для мусульман"

# ── Supabase ──────────────────────────────────────────────────────────────────
# Получить на: https://app.supabase.com → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_PROJECT_ID=your-project-id

# ── Auth ──────────────────────────────────────────────────────────────────────
# Секретный ключ для подписи JWT — генерируйте: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-key-min-32-chars

# ── External APIs (опционально) ───────────────────────────────────────────────
# Prayer times API
NEXT_PUBLIC_PRAYER_API_URL=https://api.aladhan.com/v1

# ── Analytics (опционально) ───────────────────────────────────────────────────
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ── Feature Flags ─────────────────────────────────────────────────────────────
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_MAINTENANCE_MODE=false
